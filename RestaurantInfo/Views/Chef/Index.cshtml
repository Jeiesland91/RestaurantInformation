@model IEnumerable<Chef>

@{
    ViewData["Title"] = "Chef";
}

<div class="text-center">
    <h1 class="display-4">Chefs</h1>
</div>

<a asp-action="Add" class="ml-3">Add Chef</a>

<table class="table">
    <thead>
    <tr><th>First Name</th><th>Last Name</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (Chef chef in Model)
    {
        <tr>
            <td>@chef.FirstName</td>
            <td>@chef.LastName</td>
            <td>
                <my-link-button action="Delete" id="@chef.ChefId">Delete</my-link-button>
            </td>
        </tr>
    }
    </tbody>
</table>